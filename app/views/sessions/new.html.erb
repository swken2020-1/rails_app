<%= stylesheet_link_tag "/assets/users.css" %>
<h1>ログイン</h1>

<%= form_with scope: :session, local: true do |f| %>
  <%= f.label :name, 'ユーザーID' %>
  <%= f.text_field :name, id: 'session_name' %><br>
  <%= f.label :password, 'パスワード' %>
  <%= f.password_field :password, id: 'session_password' %><br>
  <%= f.submit 'ログインする', class: "login-sub" %>
<% end %>


<%= link_to "トップに戻る", root_url, class: "btn float-right" %>