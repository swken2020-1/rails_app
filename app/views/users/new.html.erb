 <%= stylesheet_link_tag "/assets/users.css" %>

<h1>ユーザー登録</h1>

<% if @user.errors.any? %>
  <div class="alert alert-warning">
    <ul>
        <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @user, class: :form, local: true do |f| %>
    <%= f.label :name, 'ユーザー名' %>
    <%= f.text_field :name %><br>
    <%= f.label :discord_id, 'DiscorID' %>
    <%= f.text_field :discord_id %><br>
    <%= f.label :password, 'パスワード' %>
    <%= f.password_field :password %><br>
    <%= f.label :password_confirmation, 'パスワード(確認)' %>
    <%= f.password_field :password_confirmation %><br>
    <%= f.submit '登録する' %>
<% end %>
<%= link_to "トップに戻る", root_url, {class: "btn btn-outline-secondary"} %>